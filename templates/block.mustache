{{!
    @template local_dash/block

    Example context (json):
    {
        "sitefullname": "Moodle - 311",
		"courseurl": "https://localhost/moodle/course/view.php?id=2"
    }
}}

{{#blockmenu}}
<div class="dash-custom-menu" >{{{blockmenu}}}</div>
{{/blockmenu}}

<div id="dash-{{block_instance_id}}" class="dash-container">
    <div class="dash-header-content">
        {{{header_content}}}
    </div>
    {{#editing}}
        <button class="dash-edit-preferences btn btn-sm btn-primary mb-2" style="width: 100%;">{{#str}}preferences{{/str}}</button>
    {{/editing}}
    <div class="dash-block-content">
        {{{preloaded}}}
    </div>
    <div class="dash-footer-content">
        {{{footer_content}}}
    </div>
</div>

{{#js}}
    require(["block_dash/dash_instance"], function(DashInstance) {
        new DashInstance("#dash-{{block_instance_id}}", "{{block_instance_id}}", "{{block_context_id}}", {{#editing}}true{{/editing}}{{^editing}}false{{/editing}}, "{{istotara}}", "{{pagelayout}}");
    });
{{/js}}
